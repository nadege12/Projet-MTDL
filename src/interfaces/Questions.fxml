    <Label text="Créer une nouvelle question" />
    <TextField fx:id="questionText" promptText="Texte de la question" />
    <TextField fx:id="answer1Text" promptText="Réponse 1" />
    <TextField fx:id="answer2Text" promptText="Réponse 2" />
    <TextField fx:id="answer3Text" promptText="Réponse 3" />
    <TextField fx:id="answer4Text" promptText="Réponse 4" />
    <Button onAction="#saveQuestion" text="Enregistrer" />
</VBox>
